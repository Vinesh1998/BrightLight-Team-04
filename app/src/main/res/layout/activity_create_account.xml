<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.CreateAccountActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/layoutHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="66dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/logo"
                tools:ignore="MissingConstraints" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Create an account for you."
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="New to bright light online book store?"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.299"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.164"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="User Name"/>
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="46dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:background="@drawable/rounded_edittext"
                android:hint="Enter Username"
                android:inputType="text"
                android:textColorHint="@color/text_hint"
                android:paddingLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Email"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_edittext"
                android:hint="Enter email"
                android:textColorHint="@color/text_hint"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Password"/>
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_edittext"
                android:hint="Password"
                android:textColorHint="@color/text_hint"
                android:inputType="textPassword"
                android:paddingLeft="20dp" />
            <TextView
                android:id="@+id/tvPassError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password should contain(s) \n * Min length should be 8 \n * At least 1 Cap \n * At least 1 numeric \n * At least 1 Special char"
                android:textAlignment="textStart"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:textColor="@color/red"
                android:clickable="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Age"/>
            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_edittext"
                android:hint="Enter age"
                android:maxLength="2"
                android:maxEms="2"
                android:textColorHint="@color/text_hint"
                android:inputType="number"
                android:paddingLeft="20dp"/>

            <Button
                android:id="@+id/RegisterBtn"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/primary_button"
                android:text="Create Account"
                android:textColor="@color/white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text="already have an account?"
                    />
                <TextView
                    android:id="@+id/tvSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In here!"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="@color/primary"
                    android:clickable="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
