<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:padding="15dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:drawableLeft="@drawable/ic_baseline_add_circle_24"
                android:drawableTint="@color/primary_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Add book"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:layout_marginBottom="20dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonChoose"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@color/primary"
                android:text="Choose" />

            <ImageView
                android:id="@+id/ivBookImage"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:background="@drawable/rounded_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_book_24"
                />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Book Name"
            />
        <EditText
            android:id="@+id/etBookName"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="46dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:hint="enter book name"
            android:inputType="text"
            android:textColorHint="@color/text_hint"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Author"
            />
        <EditText
            android:id="@+id/etAuthorName"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="46dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:hint="enter author name"
            android:inputType="text"
            android:textColorHint="@color/text_hint"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Published on"
            />
        <EditText
            android:id="@+id/etPublishedDate"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="46dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:hint="dd/mm/yyyy"
            android:inputType="datetime"
            android:textColorHint="@color/text_hint"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="No of books available"
            />
        <EditText
            android:id="@+id/etAvailableBook"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="46dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:hint="ex. 10"
            android:inputType="number"
            android:textColorHint="@color/text_hint"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Description"
            />
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="46dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:hint="enter short description"
            android:inputType="text"
            android:textColorHint="@color/text_hint"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Purchase amount"
            />
        <EditText
            android:id="@+id/etPurchaseAmt"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="46dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableLeft="@drawable/baseline_attach_money_24"
            android:drawablePadding="7dp"
            android:background="@drawable/rounded_edittext"
            android:hint="ex: 45.45"
            android:inputType="text"
            android:textColorHint="@color/text_hint"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Rental amount"
            />
        <EditText
            android:id="@+id/etRentalAmt"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="46dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/baseline_attach_money_24"
            android:drawablePadding="7dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:hint="ex: 25.50"
            android:inputType="numberDecimal"
            android:textColorHint="@color/text_hint"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Rating"
            />
        <EditText
            android:id="@+id/etRating"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="46dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:hint="ex: 2.5"
            android:inputType="numberDecimal"
            android:textColorHint="@color/text_hint"
            android:paddingLeft="20dp" />
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/primary_button"
            android:layout_marginTop="20dp"
            android:text="Add book"
            android:textColor="@color/white"
            />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>